<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><strong><%= t ".add_apply" %></strong></h4>
    </div>
    <%= search_form_for @q, url: new_employers_apply_path,
      remote: true, class: "form-search" do |f| %>
      <div class="col-md-7">
        <%= f.text_field :name_cont, placeholder: t(".job_name_placeholder"),
          class: "form-control input-sm search-job" %>
      </div>
      <%= hidden_field_tag :choosen_ids, nil, id: "choosen-ids" %>
      <%= f.submit t(".search"), class: "btn btn-primary btn-sm w60" %>
    <% end %>
    <div class="modal-body">
      <%= simple_form_for [:employers, @apply], remote: :true,
        class: "form-horizontal form-bordered" do |f| %>
        <div class="row">
          <div class="block col-md-5">
            <div class="block-title">
              <h2><strong><%= t ".choose_job" %></strong></h2>
            </div>
            <span class="error-message-job"></span>
            <div class="row">
              <div class="col-md-12">
                <div class="tagsinput" id="example-tags_tagsinput">
                  <span class="text-muted no-job">
                    <small><em><%= t ".no_job_choosen" %></em></small>
                  </span>
                </div>
              </div>
            </div>
            <div id="search-job">
              <%= render "choose_jobs" %>
            </div>
          </div>
          <div class="block col-md-7 h524">
            <div class="block-title">
              <h2><strong><%= t ".apply" %></strong></h2>
            </div>
            <%= render partial: "apply_form", locals: {f: f} %>
          </div>
        </div>

        <div class="row">
          <center>
            <%= f.submit t(".create"), class: "btn btn-info w125" %>
          </center>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag "employers/add_apply" %>
